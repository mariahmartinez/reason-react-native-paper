{
  "private": true,
  "name": "@reason-react-native/.github",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{md,json,js,css}\""
  },
  "devDependencies": {
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.18.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
